# logstash - indexer instance
#
description     "logstash indexer instance"

start on virtual-filesystems
stop on runlevel [06]

respawn
respawn limit 5 30
limit nofile 65550 65550

env HOME=<%= @working_directory %>
env JAVA_OPTS='<%= @java_options %>'
chdir <%= @working_directory %>
# https://bugs.launchpad.net/upstart/+bug/812870
# We run as root until thenâ€¦
#setuid <%= @user %>
#setgid <%= @group %>

script
exec java -jar <%= @binary_path %> agent -f <%= @configuration_directory %> --log <%= @log_directory %>/<%= @log_file %>
end script
